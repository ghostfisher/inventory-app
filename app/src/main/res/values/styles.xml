<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		<item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="label_tv_style" parent="android:Widget.TextView">
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
		<item name="android:textColor">#111</item>
    </style>
    <!-- ther is some defrence in the positioning for the quantity label -->
    <style name="qlabel_tv_style" parent="@style/label_tv_style">
        <item name="android:layout_margin">10dp</item>
    </style>
    <style name="value_tv_style" parent="android:Widget.TextView">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textColor">#111</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:maxLines">1</item>
    	<item name="android:gravity">center</item>
    </style>
    <style name="q_value_tv_style"  parent="@style/value_tv_style">
        <item name="android:layout_margin">10dp</item>
    </style>
</resources>
