<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">
<RelativeLayout
	android:layout_width="match_parent"
    android:layout_height="wrap_content"
	android:background="#FFF"
	android:layout_margin="3dp"
	android:descendantFocusability="blocksDescendants"
    >
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_prod_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginLeft="@dimen/layout_horizontal_margin"
        android:layout_marginRight="@dimen/layout_horizontal_margin"
       	android:layout_marginBottom="@dimen/activity_vertical_margin"
       	android:layout_marginTop="@dimen/activity_vertical_margin"
        />
	<TextView 
	    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_prod_price"
        android:textSize="14sp"
        android:layout_below="@id/item_prod_name"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/layout_horizontal_margin"
        android:layout_marginRight="@dimen/layout_horizontal_margin"
       	android:layout_marginBottom="@dimen/activity_vertical_margin"
       	android:layout_marginTop="@dimen/activity_vertical_margin"
        />
	<Button 
	    android:textSize="15sp"
	    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_sale_btn"
        android:text="@string/sale_word"
        android:background="@drawable/sale_btn_bg"
        android:layout_alignParentRight="true"
      	android:layout_centerVertical="true"
      	android:layout_marginLeft="@dimen/layout_horizontal_margin"
        android:layout_marginRight="@dimen/layout_horizontal_margin"
       	android:layout_marginBottom="@dimen/activity_vertical_margin"
       	android:layout_marginTop="@dimen/activity_vertical_margin"
       	android:padding="@dimen/btn_padding"
        />

	<TextView
	    android:id="@+id/item_prod_q"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_toRightOf="@+id/item_prod_price"
	    android:layout_alignBaseline="@id/item_prod_price"
      	android:layout_marginLeft="@dimen/layout_horizontal_margin"
        android:layout_marginRight="20dp"
       	android:layout_marginBottom="@dimen/activity_vertical_margin"
       	android:layout_marginTop="@dimen/activity_vertical_margin"
	    android:gravity="center"
	    android:textSize="15sp"
		android:textStyle="bold"
		android:textColor="#444"
		/>
	
</RelativeLayout>
</android.support.v7.widget.CardView>